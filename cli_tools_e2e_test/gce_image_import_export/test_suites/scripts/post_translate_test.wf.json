{
  "Name": "post-translate-test",
  "Sources": {
    "${path_to_post_translate_test}": "${path_to_post_translate_test}"
  },
  "Vars": {
    "image_under_test": {
      "Description": "The ID of this test run.",
      "Required": true
    },
    "path_to_post_translate_test": {
      "Description": "Path for script to run after translation.",
      "Required": true
    }
  },
  "Steps": {
    "create-instance": {
      "CreateInstances": [
        {
          "disks": [
            {
              "initializeParams": {
                "sourceImage": "${image_under_test}"
              }
            }
          ],
          "machineType": "n1-standard-4",
          "name": "inst-import-test",
          "StartupScript": "${path_to_post_translate_test}"
        }
      ]
    },
    "wait-for-instance": {
      "Timeout": "30m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-import-test",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "PASSED:",
            "FailureMatch": "FAILED:",
            "StatusMatch": "STATUS:"
          }
        }
      ]
    },
    "cleanup": {
      "DeleteResources": {
        "Images": [
          "${image_under_test}"
        ],
        "Instances": [
          "inst-import-test"
        ]
      }
    }
  },
  "Dependencies": {
    "wait-for-instance": [
      "create-instance"
    ],
    "cleanup": [
      "wait-for-instance"
    ]
  }
}
