{
  "Name": "post-translate-test",
  "Vars": {
    "image_under_test": {
      "Description": "The ID of this test run.",
      "Required": true
    },
    "startup_script": {
      "Required": true,
      "Description": "The start up script of the instance for this test run."
    }
  },
  "Sources": {
    "${startup_script}": "${startup_script}"
  },
  "Steps": {
    "create-instance": {
      "CreateInstances": [
        {
          "disks": [
            {
              "initializeParams": {
                "sourceImage": "${image_under_test}"
              }
            }
          ],
          "machineType": "n1-standard-4",
          "name": "inst-import-test",
          "startupScript": "${startup_script}"
        }
      ]
    },
    "wait-for-instance": {
      "Timeout": "30m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-import-test",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "PASSED:",
            "FailureMatch": "FAILED:",
            "StatusMatch": "STATUS:"
          }
        }
      ]
    },
    "cleanup": {
      "DeleteResources": {
        "Images": [
          "${image_under_test}"
        ],
        "DeleteResources": {
          "Instances": [
            "inst-import-test"
          ]
        }
      }
    }
  },
  "Dependencies": {
    "wait-for-instance": [
      "create-instance"
    ],
    "cleanup": [
      "wait-for-instance"
    ]
  }
}
