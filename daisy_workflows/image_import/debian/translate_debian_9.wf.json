{
  "Name": "translate-debian-9",
  "Vars": {
    "source_disk": {
      "Required": true,
      "Description": "The Debian 9 GCE disk to translate."
    },
    "install_gce_packages": {
      "Value": "true",
      "Description": "Whether to install GCE packages."
    },
    "image_name": {
      "Value": "debian-9-${ID}",
      "Description": "The name of the translated Debian 9 image."
    }
  },
  "Steps": {
    "translate-disk": {
      "IncludeWorkflow": {
        "Path": "./translate_debian.wf.json",
        "Vars": {
          "debian_release": "stretch",
          "install_gce_packages": "${install_gce_packages}",
          "imported_disk": "${source_disk}"
        }
      },
      "Timeout": "60m"
    },
    "create-image": {
      "CreateImages": [
        {
          "Name": "${image_name}",
          "SourceDisk": "${source_disk}",
          "ExactName": true,
          "NoCleanup": true
        }
      ]
    }
  },
  "Dependencies": {
    "translate-disk": ["setup-disk"],
    "create-image": ["translate-disk"]
  }
}
