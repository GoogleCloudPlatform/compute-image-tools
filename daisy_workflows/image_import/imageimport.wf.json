{
  "Name": "image-import",
  "Vars": {
    "source": {"Required": true, "Description": "The local or GCS path to virtual disk image to import."},
    "image-name": "my-image"
  },
  "Sources": {
    "image": "${source}",
    "startup_script": "imageimport_startup.sh"
  },
  "Steps": {
    "setup": {
      "CreateDisks": [
        {
          "Name": "importer",
          "SourceImage": "projects/debian-cloud/global/images/family/debian-8",
          "SizeGb": "10",
          "Type": "pd-ssd"
        }
      ]
    },
    "import-image": {
      "CreateInstances": [
        {
          "Name": "importer",
          "Disks": [{"Source": "importer"}],
          "MachineType": "n1-highcpu-16",
          "Metadata": {
            "image-name": "${image-name}",
            "vm-name": "importer-${NAME}-${ID}",
            "workflow-name": "${NAME}",
            "workflow-id": "${ID}",
            "zone": "${ZONE}"
          },
          "Scopes": ["https://www.googleapis.com/auth/compute", "https://www.googleapis.com/auth/devstorage.read_write"],
          "StartupScript": "startup_script"
        }
      ]
    },
    "wait": {
      "WaitForInstancesSignal": [{"Name": "importer", "Stopped": true}],
      "Timeout": "60m"
    }
  },
  "Dependencies": {
    "import-image": ["setup"],
    "wait": ["import-image"]
  }
}
