{
  "Name": "inspect-disk",
  "DefaultTimeout": "5m",
  "Vars": {
    "pd_uri": {
      "Required": true,
      "Description": "PD that will be inspected (URI)."
    },
    "is_inspect_os": {
      "Description": "Whether to inspect OS."
    }
  },
  "Sources": {
    "daisy-shim.sh": "daisy-shim.sh",
    "setup.py": "setup.py",
    "src": "src"
  },
  "Steps": {
    "run-inspection": {
      "CreateInstances": [
        {
          "Name": "run-inspection",
          "Disks": [
            {
              "AutoDelete": true,
              "boot": true,
              "initializeParams": {
                "sourceImage": "projects/compute-image-tools/global/images/family/debian-9-worker"
              }
            },
            {
              "Source": "${pd_uri}"
            }
          ],
          "MachineType": "n1-standard-4",
          "StartupScript": "daisy-shim.sh",
          "Metadata": {
            "is-inspect-os": "${is_inspect_os}"
          }
        }
      ]
    },
    "wait-for-signal": {
      "WaitForInstancesSignal": [
        {
          "Name": "run-inspection",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "Success:",
            "FailureMatch": "Failed:",
            "StatusMatch": "Status:"
          }
        }
      ]
    },
    "cleanup": {
      "DeleteResources": {
        "Instances": [
          "run-inspection"
        ]
      }
    }
  },
  "Dependencies": {
    "wait-for-signal": [
      "run-inspection"
    ],
    "cleanup": [
      "wait-for-signal"
    ]
  }
}
