{
  "Name": "create-instance",
  "DefaultTimeout": "240m",
  "Vars": {
    "boot_disk_image_uri": {
      "Required": true,
      "Description": "URI for the boot disk."
    },
    "instance_name": {
      "Required": true,
      "Description": "The name of the imported instance."
    },
    "description": {
      "Value": "",
      "Description": "Optional description to set for the instance."
    },
    "machine_type": "n1-standard-1",
    "network": {
      "Value": "global/networks/default",
      "Description": "Network to use for the import instance"
    },
    "subnet": {
      "Value": "",
      "Description": "SubNetwork to use for the import instance"
    },
    "private_network_ip": {
      "Value": "",
      "Description": "IP to assign to the instance"
    },
    "network_tier": {
      "Value": "PREMIUM",
      "Description": "Network tier that will be used to configure the instance"
    }
  },
  "Steps": {
    "create-instance": {
      "CreateInstances": [
        {
          "Name": "${instance_name}",
          "Disks": [
            {
              "initializeParams": {
                "sourceImage": "${boot_disk_image_uri}"
              },
              "AutoDelete": true,
              "boot": true
            }
          ],
          "MachineType": "${machine_type}",
          "networkInterfaces": [
            {
              "network": "${network}",
              "subnetwork": "${subnet}",
              "networkIP": "${private_network_ip}",
              "accessConfigs": [
                {
                  "type": "ONE_TO_ONE_NAT",
                  "networkTier": "${network_tier}"
                }
              ]
            }
          ],
          "Description": "${description}",
          "ExactName": true,
          "NoCleanup": true
        }
      ]
    },
    "cleanup": {
      "DeleteResources": {
        "Images": ["${boot_disk_image_uri}"]
      }
    }
  },
  "Dependencies": {
    "cleanup": ["create-instance"]
  }
}
