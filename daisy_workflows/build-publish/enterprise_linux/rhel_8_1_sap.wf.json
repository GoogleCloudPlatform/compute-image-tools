{
  "Name": "rhel-8-1-sap",
  "Project": "gce-image-builder",
  "Zone": "us-central1-b",
  "GCSPath": "gs://gce-image-build-bucket/daisy/${USERNAME}",
  "Vars": {
    "build_date": {
      "Value": "${TIMESTAMP}",
      "Description": "Build datestamp used to version the image."
    },
    "google_cloud_repo": {
      "Value": "staging",
      "Description": "The Google Cloud Repo branch to use."
    },
    "workflow_root": {
      "Value": "/workflows",
      "Description": "Root of github workflows, defaults to /workflows in the container."
    },
    "gcs_url": {
      "Required": true,
      "Description": "The GCS path that image raw file exported to."
    },
    "installer_iso": {
      "Required": true,
      "Description": "The CentOS 7 installer ISO to build from."
    }
  },
  "Steps": {
    "build": {
      "TimeOut": "60m",
      "IncludeWorkflow": {
        "Path": "${workflow_root}/image_build/enterprise_linux/rhel_8_sap.wf.json",
        "Vars": {
          "build_date": "${build_date}",
          "google_cloud_repo": "${google_cloud_repo}",
          "install_disk": "disk-rhel-8",
          "installer_iso": "${installer_iso}",
          "rhel_release": "rhel-8-1"
        }
      }
    },
    "export-image": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "${workflow_root}/export/disk_export.wf.json",
        "Vars": {
          "destination": "${gcs_url}",
          "source_disk": "disk-rhel-8"
        }
      }
    },
    "cleanup-image": {
      "DeleteResources": {
        "Images": ["rhel-8-1-sap-v${build_date}"]
      }
    }
  },
  "Dependencies": {
    "export-image": ["build"],
    "cleanup-image": ["build"]
  }
}
