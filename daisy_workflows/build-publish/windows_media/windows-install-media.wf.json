{
  "Name": "windows-install-media",
  "Project": "gce-image-builder",
  "Zone": "us-central1-b",
  "GCSPath": "gs://gce-image-build-bucket/daisy/${USERNAME}",
  "Vars": {
    "media_disk": "media-disk",
    "build_date": "${TIMESTAMP}",
    "image_prefix": "windows-install-media",
    "gcs_path": {"Value": "gs://gce-image-archive/windows-install-media", "Description": "GCS path to export image to"},
    "workflow_root": {"Value": "/workflows", "Description": "Root of github workflows, defaults to /workflows in the container."}
  },
  "Sources": {
    "prepare_install_media.ps1": "./prepare_install_media.ps1",
    "components": "./components/",
    "iso/Win_Server_STD_CORE_2022_64Bit_English.iso": "gs://gce-image-build-resources/windows/iso/SW_DVD9_Win_Server_STD_CORE_2022__64Bit_English_DC_STD_MLF_X22-74290.ISO",
    "updates/Win_Server_STD_CORE_2019_1809.1_64Bit_English/": "gs://gce-image-build-resources/windows/updates_2019/",
    "iso/Win_Server_STD_CORE_2019_1809.1_64Bit_English.iso": "gs://gce-image-build-resources/windows/iso/SW_DVD9_Win_Server_STD_CORE_2019_1809.1_64Bit_English_DC_STD_MLF_X22-02970.ISO",
    "updates/Win_Server_STD_CORE_2016_64Bit_English/": "gs://gce-image-build-resources/windows/updates_2016/",
    "iso/Win_Server_STD_CORE_2016_64Bit_English.iso": "gs://gce-image-build-resources/windows/iso/SW_DVD9_Win_Server_STD_CORE_2016_64Bit_English_-4_DC_STD_MLF_X21-70526.ISO",
    "updates/Windows_Svr_Std_and_DataCtr_2012_R2_64Bit_English/": "gs://gce-image-build-resources/windows/updates_2012r2/",
    "iso/Windows_Svr_Std_and_DataCtr_2012_R2_64Bit_English.iso": "gs://gce-image-build-resources/windows/iso/SW_DVD9_Windows_Svr_Std_and_DataCtr_2012_R2_64Bit_English_-4_MLF_X19-82891.ISO"
  },
  "Steps": {
    "setup-disks": {
      "CreateDisks": [
        {
          "Name": "${media_disk}",
          "SizeGb": "50",
          "Type": "pd-ssd"
        },
         {
          "Name": "worker-disk",
          "SizeGb": "500",
          "SourceImage": "projects/windows-cloud/global/images/family/windows-2019-core",
          "Type": "pd-ssd"
        }
      ]
    },
    "run-setup": {
      "CreateInstances": [
        {
          "Name": "inst-setup",
          "Disks": [{"Source": "worker-disk"}, {"Source": "${media_disk}"}],
          "MachineType": "n1-standard-8",
          "Metadata": {
            "updates-path": "${SOURCESPATH}/updates",
            "iso-path": "${SOURCESPATH}/iso",
            "components-path": "${SOURCESPATH}/components"
          },
          "StartupScript": "prepare_install_media.ps1"
        }
      ]
    },
    "wait-for-setup": {
      "Timeout": "4h",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-setup",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": ["BuildFailed:", "windows-startup-script-url exit status 1"],
            "SuccessMatch": "BuildCompleted",
            "StatusMatch": "BuildStatus:"
          }
        }
      ]
    },
    "delete-inst-setup": {
      "DeleteResources": {
        "Instances": ["inst-setup"]
      }
    },
    "disk-export": {
      "Timeout": "30m",
      "IncludeWorkflow": {
        "Path": "${workflow_root}/export/disk_export.wf.json",
        "Vars": {
          "source_disk": "${media_disk}",
          "destination": "${gcs_path}/${image_prefix}-v${build_date}/root.tar.gz"
        }
      }
    }
  },
  "Dependencies": {
    "run-setup": ["setup-disks"],
    "wait-for-setup": ["run-setup"],
    "delete-inst-setup": ["wait-for-setup"],
    "disk-export": ["delete-inst-setup"]
  }
}
