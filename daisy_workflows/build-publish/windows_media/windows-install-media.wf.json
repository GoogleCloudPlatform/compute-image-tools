{
  "Name": "windows-install-media",
  "Project": "gce-image-builder",
  "Zone": "us-central1-b",
  "Vars": {
    "workflow_root": {
      "Value": "/workflows",
      "Description": "Root of github workflows, defaults to /workflows in the container."
    },
    "gcs_url": {
      "Required": true,
      "Description": "The GCS path that image raw file exported to."
    },
    "gcs_resource_path": "gs://gce-image-build-resources/windows",
    "media_disk": "media-disk",
    "image_prefix": "windows-install-media",
    "iso_name_2022": "SW_DVD9_Win_Server_STD_CORE_2022__64Bit_English_DC_STD_MLF_X22-74290.ISO",
    "iso_name_2019": "SW_DVD9_Win_Server_STD_CORE_2019_1809.1_64Bit_English_DC_STD_MLF_X22-02970.ISO",
    "iso_name_2016": "SW_DVD9_Win_Server_STD_CORE_2016_64Bit_English_-4_DC_STD_MLF_X21-70526.ISO",
    "iso_name_2012r2": "SW_DVD9_Windows_Svr_Std_and_DataCtr_2012_R2_64Bit_English_-4_MLF_X19-82891.ISO"
  },
  "Sources": {
    "prepare_install_media.ps1": "./prepare_install_media.ps1",
    "components": "./components/",
    "iso/Win_Server_STD_CORE_2022_64Bit_English.iso": "${gcs_resource_path}/iso/${iso_name_2022}",
    "updates/Win_Server_STD_CORE_2019_1809.1_64Bit_English/": "${gcs_resource_path}/updates_2019/",
    "iso/Win_Server_STD_CORE_2019_1809.1_64Bit_English.iso": "${gcs_resource_path}/iso/${iso_name_2019}",
    "updates/Win_Server_STD_CORE_2016_64Bit_English/": "${gcs_resource_path}/updates_2016/",
    "iso/Win_Server_STD_CORE_2016_64Bit_English.iso": "${gcs_resource_path}/iso/${iso_name_2016}",
    "updates/Windows_Svr_Std_and_DataCtr_2012_R2_64Bit_English/": "${gcs_resource_path}/updates_2012r2/",
    "iso/Windows_Svr_Std_and_DataCtr_2012_R2_64Bit_English.iso": "${gcs_resource_path}/iso/${iso_name_2012r2}"
  },
  "Steps": {
    "setup-disks": {
      "CreateDisks": [
        {
          "Name": "${media_disk}",
          "SizeGb": "50",
          "Type": "pd-ssd"
        },
         {
          "Name": "worker-disk",
          "SizeGb": "500",
          "SourceImage": "projects/windows-cloud/global/images/family/windows-2019-core",
          "Type": "pd-ssd"
        }
      ]
    },
    "run-setup": {
      "CreateInstances": [
        {
          "Name": "inst-setup",
          "Disks": [{"Source": "worker-disk"}, {"Source": "${media_disk}"}],
          "MachineType": "n1-standard-8",
          "Metadata": {
            "updates-path": "${SOURCESPATH}/updates",
            "iso-path": "${SOURCESPATH}/iso",
            "components-path": "${SOURCESPATH}/components"
          },
          "StartupScript": "prepare_install_media.ps1"
        }
      ]
    },
    "wait-for-setup": {
      "Timeout": "4h",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-setup",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": ["BuildFailed:", "windows-startup-script-url exit status 1"],
            "SuccessMatch": "BuildCompleted",
            "StatusMatch": "BuildStatus:"
          }
        }
      ]
    },
    "delete-inst-setup": {
      "DeleteResources": {
        "Instances": ["inst-setup"]
      }
    },
    "disk-export": {
      "Timeout": "30m",
      "IncludeWorkflow": {
        "Path": "${workflow_root}/export/disk_export.wf.json",
        "Vars": {
          "source_disk": "${media_disk}",
          "destination": "${gcs_url}"
        }
      }
    }
  },
  "Dependencies": {
    "run-setup": ["setup-disks"],
    "wait-for-setup": ["run-setup"],
    "delete-inst-setup": ["wait-for-setup"],
    "disk-export": ["delete-inst-setup"]
  }
}
