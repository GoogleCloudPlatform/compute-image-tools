{
  "Name": "build-rhua",
  "DefaultTimeout": "60m",
  "Zone": "us-central1-b",
  "Vars": {
    "build_date": {
      "Value": "${TIMESTAMP}",
      "Description": "Build datestamp used to version the image."
    },
    "workflow_root": {
      "Value": "/workflows",
      "Description": "Root of github workflows, defaults to /workflows in the container."
    },
    "gcs_url": {
      "Required": true,
      "Description": "The GCS path for the exported image tarball."
    },
    "instance_service_account": {
      "Required": true,
      "Description": "Service account that will be used by the created instance"
    }
  },
  "Sources": {
    "install_rhua.sh": "./install_rhua.sh",
    "fstab": "./fstab",
    "answers.yaml": "./answers.yaml",
    "reponames.txt": "./reponames.txt",
    "depend-nfs.conf": "./depend-nfs.conf"
  },
  "Steps": {
    "create-disk": {
      "CreateDisks": [
        {
          "Name": "disk-rhua",
          "SourceImage": "projects/rhel-cloud/global/images/family/rhel-8",
          "SizeGb": "50",
          "Type": "pd-ssd"
        }
      ]
    },
    "install-rhua": {
      "CreateInstances": [
        {
          "Name": "inst-rhua",
          "Disks": [{"Source": "disk-rhua"}],
          "MachineType": "e2-standard-4",
          "Metadata": {
            "block-project-ssh-keys": "true"
          },
          "StartupScript": "install_rhua.sh",
          "ServiceAccounts": [
            {
              "Email": "${instance_service_account}",
              "Scopes": ["https://www.googleapis.com/auth/cloud-platform"]
            }
          ]
        }
      ]
    },
    "wait-install-rhua": {
      "Timeout": "60m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-rhua",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "BuildFailed:",
            "SuccessMatch": "BuildSuccess:",
            "StatusMatch": "BuildStatus:"
          }
        }
      ]
    },
    "cleanup-inst-rhua": {
      "DeleteResources": {
        "Instances": ["inst-rhua"]
      }
    },
    "export-image": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "${workflow_root}/export/disk_export.wf.json",
        "Vars": {
          "destination": "${gcs_url}",
          "source_disk": "disk-rhua"
        }
      }
    }
  },
  "Dependencies": {
    "export-image": ["cleanup-inst-rhua"],
    "cleanup-inst-rhua": ["wait-install-rhua"],
    "wait-install-rhua": ["install-rhua"],
    "install-rhua": ["create-disk"]
  }
}
