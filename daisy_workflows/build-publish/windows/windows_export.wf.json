{
  "Vars": {
    "install_disk": "disk-install",
    "build_date": {
      "Required": true,
      "Description": "The build date of the image."
    },
    "gcs_url": {
      "Required": true,
      "Description": "The GCS url of where to save the images."
    },
    "workflow_root": {
      "Required": true,
      "Description": "Root of github workflows."
    },
    "disk_export_time_out": {
      "Value": "50m",
      "Description": "Disk export step time out. Default is 50m."
    },
    "sbom_destination": {
      "Value": "${OUTSPATH}/export-image.sbom.json",
      "Description": "The GCS url that the sbom file exported to."
    },
    "sbom_util_gcs_root": {
      "Value": "",
      "Description": "The root gcs bucket for sbomutil, if using sbomutil to generate the SBOM."
    }
  },
  "Steps": {
    "disk-export": {
      "Timeout": "${disk_export_time_out}",
      "IncludeWorkflow": {
        "Path": "${workflow_root}/export/disk_export.wf.json",
        "Vars": {
          "source_disk": "${install_disk}",
          "destination": "${gcs_url}",
          "sbom_destination": "${sbom_destination}",
          "sbom_util_gcs_root": "${sbom_util_gcs_root}",
          "sbom_util_archetype": "windows-image"
        }
      }
    }
  }
}
