{
  "Name": "windows-2019-dc-core-containers-uefi-build",
  "Vars": {
    "build_date": "${TIMESTAMP}",
    "publish_project": "${PROJECT}",
    "install_disk": {"Value": "disk-install", "Description": "Name of the disk to use for the installation."},
    "source_image_project": {"Value": "windows-cloud", "Description": "Project to source base image from."},
    "docker_license_file": {"Description": "Path to license file for Docker (Mirantis) runtime."}
  },
  "Sources": {
    "container_image_install.ps1": "./container_image_install.ps1",
    "docker_license_file.lic": "${docker_license_file}"
  },
  "Steps": {
    "setup-disks": {
      "CreateDisks": [
        {
          "Name": "disk-scratch",
          "SizeGb": "200",
          "Type": "pd-ssd"
        },
        {
          "Name": "${install_disk}",
          "SourceImage": "projects/${source_image_project}/global/images/family/windows-2019-core",
          "Type": "pd-ssd"
        }
      ]
    },
    "run-install": {
      "CreateInstances": [
        {
          "Name": "inst-install",
          "Disks": [{"Source": "${install_disk}"}, {"Source": "disk-scratch"}],
          "MachineType": "e2-highcpu-4",
          "Metadata": {
            "version": "2019",
            "docker_license_file": "${docker_license_file}"
          },
          "StartupScript": "container_image_install.ps1"
        }
      ]
    },
    "wait-for-install": {
      "Timeout": "30m",
      "WaitForInstancesSignal": [
        {"Name": "inst-install",
          "Stopped": true,
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Windows build failed:"
          }
        }
      ]
    },
    "del-instance": {
      "DeleteResources": {
        "Instances": ["inst-install"]
      }
    },
    "create-image": {
      "CreateImages": [
        {
          "Name": "windows-server-2019-dc-core-for-containers-v${build_date}",
          "SourceDisk": "${install_disk}",
          "Licenses": [
            "projects/windows-cloud/global/licenses/windows-for-containers",
            "projects/windows-cloud/global/licenses/mirantis-container-runtime"
          ],
          "Description": "Microsoft, Windows Server, 2019 Datacenter Core for Containers, Server Core, GPT, Secure Boot ready, x64 built on ${build_date}",
          "GuestOsFeatures": [ "MULTI_IP_SUBNET", "UEFI_COMPATIBLE", "VIRTIO_SCSI_MULTIQUEUE", "GVNIC", "WINDOWS"],
          "Family": "windows-2019-core-for-containers",
          "Project": "${publish_project}",
          "NoCleanup": true,
          "ExactName": true
        }
      ]
    }
  },
  "Dependencies": {
    "run-install": ["setup-disks"],
    "wait-for-install": ["run-install"],
    "del-instance": ["wait-for-install"],
    "create-image": ["del-instance"]
  }
}
