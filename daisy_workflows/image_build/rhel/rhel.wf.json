{
  "Name": "${wf-name}",
  "Vars": {
    "image-dest": "",
    "installer-iso": "",
    "license-id": "",
    "google-cloud-repo": "stable",
    "release": "",
    "rhui-client-rpm": "",
    "wf-name": "build-rhel-subwf"
  },
  "Sources": {
    "build_files": "../linux_common/el/",
    "build_files/installer.iso": "${installer-iso}",
    "build_files/google-rhui-client.rpm": "${rhui-client-rpm}",
    "build_files/utils.py": "../linux_common/utils.py",
    "installerprep_startup_script": "../linux_common/bootstrap.py"
  },
  "Steps": {
    "setupDisks": {
      "CreateDisks": [
        {
          "Name": "${release}-installerprep-${ID}",
          "SourceImage": "projects/debian-cloud/global/images/family/debian-8",
          "SizeGb": "50",
          "Type": "pd-ssd",
          "ExactName": true
        },
        {
          "Name": "${release}-installer-${ID}",
          "SizeGb": "50",
          "Type": "pd-ssd",
          "ExactName": true
        },
        {
          "Name": "${release}-installation-${ID}",
          "SizeGb": "10",
          "Type": "pd-ssd",
          "ExactName": true
        }
      ]
    },
    "runInstallerPrep": {
      "CreateInstances": [
        {
          "Name": "${release}-installerprep-${ID}",
          "AttachedDisks": [
            "${release}-installerprep-${ID}",
            "${release}-installer-${ID}"
          ],
          "MachineType": "n1-standard-8",
          "Metadata": {
            "build-files-gcs-dir": "${SOURCESPATH}/build_files",
            "build-script": "build_installer.py",
            "google-cloud-repo": "${google-cloud-repo}",
            "release": "${release}"
          },
          "StartupScript": "installerprep_startup_script",
          "ExactName": true
        }
      ]
    },
    "waitInstallerPrep": {
      "Timeout": "60m",
      "WaitForInstancesSignal": [
        {"Name": "${release}-installerprep-${ID}", "Stopped": true}
      ]
    },
    "deleteInstallerPrepResources": {
      "DeleteResources": {
        "Disks": ["${release}-installerprep-${ID}"],
        "Instances": ["${release}-installerprep-${ID}"]
      }
    },
    "runInstallation": {
      "CreateInstances": [
        {
          "Name": "${release}-build-${ID}",
          "AttachedDisks": [
            "${release}-installer-${ID}",
            "${release}-installation-${ID}"
          ],
          "MachineType": "n1-standard-8",
          "Metadata": {
            "build-files-gcs-dir": "${SOURCESPATH}/build_files",
            "image-dest": "${image-dest}/${DATETIME}-${release}",
            "license-id": "${license-id}",
            "google-cloud-repo": "${google-cloud-repo}",
            "release": "${release}",
            "serial-port-enable": "true",
            "upload-logs": "true"
          },
          "Scopes": [
            "https://www.googleapis.com/auth/compute",
            "https://www.googleapis.com/auth/devstorage.read_write"
          ],
          "ExactName": true
        }
      ]
    },
    "waitInstallation": {
      "Timeout": "60m",
      "WaitForInstancesSignal": [
        {"Name": "${release}-build-${ID}", "Stopped": true}
      ]
    }
  },
  "Dependencies": {
    "runInstallerPrep": ["setupDisks"],
    "waitInstallerPrep": ["runInstallerPrep"],
    "deleteInstallerPrepResources": ["waitInstallerPrep"],
    "runInstallation": ["deleteInstallerPrepResources"],
    "waitInstallation": ["runInstallation"]
  }
}
