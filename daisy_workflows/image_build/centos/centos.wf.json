{
  "Name": "${wf-name}",
  "Vars": {
    "image-dest": {"Required": true, "Description": "The GCS directory destination to which to copy the image."},
    "installer-iso": {"Required": true, "Description": "The path to the CentOS installation ISO."},
    "license-id": {"Required": true, "Description": "The GCE license id."},
    "google-cloud-repo": "stable",
    "release": {"Required": true, "Description": "The Debian release name."},
    "wf-name": "build-centos-subwf"
  },
  "Sources": {
    "build_files": "../linux_common/el/",
    "build_files/installer.iso": "${installer-iso}",
    "build_files/utils.py": "../linux_common/utils.py",
    "installerprep_startup_script": "../linux_common/bootstrap.py"
  },
  "Steps": {
    "setup-disks": {
      "CreateDisks": [
        {
          "Name": "installerprep",
          "SourceImage": "projects/debian-cloud/global/images/family/debian-8",
          "SizeGb": "50",
          "Type": "pd-ssd"
        },
        {
          "Name": "installer",
          "SizeGb": "50",
          "Type": "pd-ssd"
        },
        {
          "Name": "installation",
          "SizeGb": "10",
          "Type": "pd-ssd"
        }
      ]
    },
    "run-installer-prep": {
      "CreateInstances": [
        {
          "Name": "installerprep",
          "Disks": [{"Source": "installerprep"}, {"Source": "installer"}],
          "MachineType": "n1-standard-8",
          "Metadata": {
            "build-files-gcs-dir": "${SOURCESPATH}/build_files",
            "build-script": "build_installer.py",
            "google-cloud-repo": "${google-cloud-repo}",
            "release": "${release}"
          },
          "StartupScript": "installerprep_startup_script"
        }
      ]
    },
    "wait-installer-prep": {
      "Timeout": "60m",
      "WaitForInstancesSignal": [{"Name": "installerprep", "Stopped": true}]
    },
    "delete-installer-prep-resources": {
      "DeleteResources": {
        "Disks": ["installerprep"],
        "Instances": ["installerprep"]
      }
    },
    "run-installation": {
      "CreateInstances": [
        {
          "Name": "build",
          "Disks": [{"Source": "installer"}, {"Source": "installation"}],
          "MachineType": "n1-standard-8",
          "Metadata": {
            "build-files-gcs-dir": "${SOURCESPATH}/build_files",
            "license-id": "${license-id}",
            "google-cloud-repo": "${google-cloud-repo}",
            "release": "${release}",
            "serial-port-enable": "true",
            "upload-logs": "true"
          },
          "Scopes": [
            "https://www.googleapis.com/auth/compute",
            "https://www.googleapis.com/auth/devstorage.read_write"
          ]
        }
      ]
    },
    "wait-installation": {
      "Timeout": "60m",
      "WaitForInstancesSignal": [{"Name": "build", "Stopped": true}]
    },
    "copy-to-dest": {
      "CopyGCSObjects": [
        {"Source": "${OUTSPATH}/image.tar.gz", "Destination": "${image-dest}/${DATETIME}-${release}/image.tar.gz"},
        {"Source": "${OUTSPATH}/synopsis.json", "Destination": "${image-dest}/${DATETIME}-${release}/synopsis.json"}
      ]
    }
  },
  "Dependencies": {
    "run-installer-prep": ["setup-disks"],
    "wait-installer-prep": ["run-installer-prep"],
    "delete-installer-prep-resources": ["wait-installer-prep"],
    "run-installation": ["delete-installer-prep-resources"],
    "wait-installation": ["run-installation"],
    "copy-to-dest": ["wait-installation"]
  }
}
