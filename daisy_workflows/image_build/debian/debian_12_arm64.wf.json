{
  "Name": "build-debian-12-arm64",
  "Vars": {
    "build_date": {"Value": "${DATE}", "Description": "Build datestamp used to version the image."},
    "publish_project": {
      "Value": "${PROJECT}",
      "Description": "A project to publish the resulting image to."
    }
  },
  "Steps": {
    "build": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "./debian_fai.wf.json",
        "Vars": {
          "build_date": "${build_date}",
          "debian_version": "bookworm",
          "builder_machine_type": "t2a-standard-2",
          "builder_source_image": "projects/compute-image-tools/global/images/family/debian-12-worker-arm64"
        }
      }
    },
    "copy-gcs-object": {
      "CopyGCSObjects": [
        {
          "Source":      "${OUTSPATH}/root.tar.gz",
          "Destination": "${OUTSPATH}/root.tar.gz"
        }
      ]
    },
    "create-image": {
      "CreateImages": [
        {
          "Name": "debian-12-arm64-v${build_date}",
          "RawDisk": {
            "Source": "${OUTSPATH}/root.tar.gz"
          },
          "Description": "Debian, Debian GNU/Linux, 12 (bookworm), arm64 built on ${build_date}",
          "Family": "debian-12-arm64",
          "Project": "${publish_project}",
          "NoCleanup": true,
          "ExactName": true,
          "GuestOsFeatures": ["UEFI_COMPATIBLE", "VIRTIO_SCSI_MULTIQUEUE", "GVNIC"],
          "Licenses": [
            "projects/debian-cloud/global/licenses/debian-12-bookworm"
          ]
        }
      ]
    }
  },
  "Dependencies": {
    "copy-gcs-object": ["build"],
    "create-image": ["copy-gcs-object"]
  }
}
