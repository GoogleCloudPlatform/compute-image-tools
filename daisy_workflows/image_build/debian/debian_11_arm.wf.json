{
  "Name": "build-debian-11-arm",
  "Vars": {
    "build_date": {"Value": "${DATE}", "Description": "Build datestamp used to version the image."},
    "publish_project": {
      "Value": "${PROJECT}",
      "Description": "A project to publish the resulting image to."
    }
  },
  "Sources": {
    "build_files/repack.py": "./repack.py",
    "startup_script_copy": "../../linux_common/bootstrap.sh"
  },
  "Steps": {
    "build": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "./debian_fai.wf.json",
        "Vars": {
          "build_date": "${build_date}",
          "debian_version": "bullseye",
          "builder_machine_type": "t2a-standard-2",
          "builder_source_image": "projects/bct-staging-images/global/images/family/debian-arm"
        }
      }
    },
    "create-disks": {
      "CreateDisks": [
        {
          "Name": "disk-repack",
          "SourceImage": "projects/bct-staging-images/global/images/family/debian-10-worker",
          "SizeGb": "50",
          "Type": "pd-ssd"
        }
      ]
    },
    "repack": {
      "CreateInstances": [
        {
          "Name": "inst-repack",
          "Disks": [{"Source": "disk-repack"}],
          "MachineType": "e2-standard-2",
          "Metadata": {
            "source_tarball": "${OUTSPATH}/root.tar.gz",
            "dest_tarball": "${OUTSPATH}/root-repack.tar.gz",
            "debian_install_google_api_python_client": "yes",
            "files_gcs_dir": "${SOURCESPATH}/build_files",
            "script": "repack.py",
            "script_prints_status": "no",
            "prefix": "Build"
          },
          "Scopes": [
            "https://www.googleapis.com/auth/devstorage.read_write"
          ],
          "StartupScript": "startup_script_copy"
        }
      ]
    },
    "wait-repack": {
      "WaitForInstancesSignal": [
        {
          "Name": "inst-repack",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "BuildFailed:",
            "SuccessMatch": "BuildSuccess:",
            "StatusMatch": "BuildStatus:"
          }
        }
      ]
    },
    "copy-gcs-object": {
      "CopyGCSObjects": [
        {
          "Source":      "${OUTSPATH}/root-repack.tar.gz",
          "Destination": "${OUTSPATH}/root-repack.tar.gz"
        }
      ]
    },
    "create-image": {
      "CreateImages": [
        {
          "Name": "debian-11-arm-v${build_date}",
          "RawDisk": {
            "Source": "${OUTSPATH}/root-repack.tar.gz"
          },
          "Description": "Debian, Debian GNU/Linux, 11 (bullseye), arm64 built on ${build_date}, supports Shielded VM features",
          "Family": "debian-11-arm",
          "Project": "${publish_project}",
          "NoCleanup": true,
          "ExactName": true,
          "GuestOsFeatures": ["UEFI_COMPATIBLE", "VIRTIO_SCSI_MULTIQUEUE"]
        }
      ]
    }
  },
  "Dependencies": {
    "repack": ["create-disks", "build"],
    "wait-repack": ["repack"],
    "copy-gcs-object": ["wait-repack"],
    "create-image": ["copy-gcs-object"]
  }
}
