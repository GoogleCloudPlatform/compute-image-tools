{
  "Name": "build-debian-10-worker",
  "Vars": {
    "build_date": {
      "Value": "${DATE}",
      "Description": "Build datestamp used to version the image."
    }
  },
  "Sources": {
      "debian_10_worker.sh": "./debian_10_worker.sh"
  },
  "Steps": {
    "build-debian-10": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "./debian_10_fai.wf.json",
        "Vars": {
          "build_date": "${build_date}"
        }
      }
    },
    "create-worker-disk": {
      "CreateDisks": [
        {
          "Name": "disk-worker",
          "SourceImage": "debian-10-v${build_date}",
          "Type": "pd-ssd"
        }
      ]
    },
    "create-worker-instance": {
      "CreateInstances": [
        {
          "Name": "inst-worker",
          "Disks": [{"Source": "disk-worker"}],
          "MachineType": "e2-standard-4",
          "StartupScript": "debian_10_worker.sh",
          "MetaData": {
            "block-project-ssh-keys": "TRUE"
          }
        }
      ]
    },
    "wait-for-stop": {
      "TimeOut": "30m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-worker",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "BuildFailed:",
            "SuccessMatch": "BuildSuccess:",
            "StatusMatch": "BuildStatus:"
          }
        }
      ]
    },
    "cleanup-resources": {
      "DeleteResources": {
        "Instances": ["inst-worker"],
        "Images": ["debian-10-v${build_date}"]
      }
    },
    "export-image": {
      "IncludeWorkflow": {
        "Path": "../../export/disk_export.wf.json",
        "Vars": {
          "source_disk": "disk-worker",
          "destination": "${OUTSPATH}/debian-10-worker-v${build_date}/root.tar.gz"
        }
      }
    }
  },
  "Dependencies": {
    "create-worker-disk": ["build-debian-10"],
    "create-worker-instance": ["create-worker-disk"],
    "wait-for-stop": ["create-worker-instance"],
    "cleanup-resources": ["wait-for-stop"],
    "export-image": ["cleanup-resources"]
  }
}
