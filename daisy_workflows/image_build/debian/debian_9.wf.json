{
  "Name": "build-debian-9",
  "Vars": {
    "google_cloud_repo": {"Value": "stable", "Description": "The Google Cloud Repo branch to use."},
    "destination": {"Required": true, "Description": "The GCS path for the destination image tar.gz."},
    "bootstrap_vz_version": {
      "Value": "https://github.com/hopkiw/bootstrap-vz/archive/master.zip",
      "Description": "The bootstrap-vz release to use."
    },
    "publish_project": {
      "Value": "${PROJECT}",
      "Description": "A project to publish the resulting image to."
    }
  },
  "Steps": {
    "build-debian-9": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "./debian.wf.json",
        "Vars": {
          "bootstrap_vz_manifest": "official/gce/stretch.yml",
          "bootstrap_vz_version": "${bootstrap_vz_version}",
          "builder_source_image": "projects/compute-image-tools/global/images/family/debian-9-worker",
          "google_cloud_repo": "${google_cloud_repo}",
          "destination": "${destination}"
        }
      }
    },
    "create-image": {
      "CreateImages": [
        {
          "Name": "debian-9-v${build_date}",
          "RawDisk": {
            "Source": "${destination}"
          },
          "Description": "Debian, Debian, 9, x86_64 built on ${build_date}",
          "Family": "debian-9",
          "Project": "${publish_project}",
          "NoCleanup": true,
          "ExactName": true
        }
      ]
    },
    "CreateDisks": [
      {
        "Name": "disk-debian-9",
        "SourceImage": "projects/${publish_project}/global/images/debian-9-v${build_date}",
        "SizeGb": "20",
        "Type": "pd-ssd"
      }
    ]
  },
  "Dependencies": {}
}
