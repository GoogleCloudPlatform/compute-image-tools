{
  "Vars": {
    "base_image": {"Required": true, "Description": "Base image family to build bare_metal image from."},
    "machine_type": "e2-standard-4",
    "bare_metal_script": {"Value": "./bare_metal_image_preparer.sh", "Description": "Startup script to build the bare_metal image."},
    "workflow_root": {"Value": "/workflows", "Description": "Root of github workflows, defaults to /workflows in the container."},
    "gcs_url": {"Required": true, "Description": "The GCS path that image raw file exported to."},
    "development": {"Required": false, "Description": "Whether to build a development image"}
  },
  "Sources": {
    "bare_metal.sh": "${bare_metal_script}"
  },
  "Steps": {
    "create-disks": {
      "CreateDisks": [
        {
          "Name": "disk-build",
          "SourceImage": "${base_image}",
          "Type": "pd-ssd"
        },
        {
          "Name": "disk-scratch",
          "SizeGb": "200",
          "Type": "pd-ssd"
        }
      ]
    },
    "create-instance": {
      "CreateInstances": [
        {
          "Name": "inst-builder",
          "Disks": [{"Source": "disk-build"}, {"Source": "disk-scratch"}],
          "MachineType": "${machine_type}",
          "MetaData": {
            "development": "${development}",
            "startup-script": "${SOURCE:bare_metal.sh}"
          }
        }
      ]
    },
    "wait-for-stop": {
      "TimeOut": "30m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-builder",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "BuildFailed:",
            "SuccessMatch": "BuildSuccess:"
          }
        }
      ]
    },
    "delete-instance": {
      "DeleteResources": {
        "Instances": ["inst-builder"]
      }
    },
    "export-image": {
      "IncludeWorkflow": {
        "Path": "${workflow_root}/export/disk_export.wf.json",
        "Vars": {
          "source_disk": "disk-build",
          "destination": "${gcs_url}"
        }
      }
    }
  },
  "Dependencies": {
    "create-disks": [],
    "create-instance": ["create-disks"],
    "wait-for-stop": ["create-instance"],
    "delete-instance": ["wait-for-stop"],
    "export-image": ["delete-instance"]
  }
}
