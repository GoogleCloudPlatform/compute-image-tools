{
  "Name": "build-rhel-7-sap",
  "Vars": {
    "google_cloud_repo": {
      "Value": "stable",
      "Description": "The Google Cloud Repo branch to use."
    },
    "installer_iso": {
      "Required": true,
      "Description": "The RHEL 7 installer ISO to build from."
    },
    "build_date": {
      "Value": "${TIMESTAMP}",
      "Description": "Build datestamp used to version the image."
    },
    "rhel_release": {
      "Value": "rhel7",
      "Description": "RHEL release version to use."
    },
    "install_disk": {
      "Value": "disk-rhel-7",
      "Description": "Name of the disk to install onto."
    },
    "publish_project": {
      "Value": "${PROJECT}",
      "Description": "A project to publish the resulting image to."
    }
  },
  "Steps": {
    "build-rhel": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "./enterprise_linux_uefi.wf.json",
        "Vars": {
          "el_release": "${rhel_release}",
          "google_cloud_repo": "${google_cloud_repo}",
          "install_disk": "${install_disk}",
          "installer_iso": "${installer_iso}",
          "rhel_sap": "true"
        }
      }
    },
    "create-image": {
      "CreateImages": [
        {
          "Name": "${rhel_release}-sap-v${build_date}",
          "SourceDisk": "${install_disk}",
          "Licenses": [
            "projects/rhel-sap-cloud/global/licenses/rhel-7-sap"
          ],
          "Description": "Red Hat, Red Hat Enterprise Linux for SAP, 7, x86_64 built on ${build_date}",
          "Family": "${rhel_release}-sap",
          "Project": "${publish_project}",
          "NoCleanup": true,
          "ExactName": true,
          "GuestOsFeatures": [
            "UEFI_COMPATIBLE"
          ]
        }
      ]
    }
  },
  "Dependencies": {
    "create-image": ["build-rhel"]
  }
}
