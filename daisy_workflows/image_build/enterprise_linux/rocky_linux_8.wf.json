{
  "Name": "build-rocky-linux-8",
  "Vars": {
    "google_cloud_repo": {
      "Value": "stable",
      "Description": "The Google Cloud Repo branch to use."
    },
    "installer_iso": {
      "Required": true,
      "Description": "The Rocky Linux 8 installer ISO to build from."
    },
    "build_date": {
      "Value": "${TIMESTAMP}",
      "Description": "Build datestamp used to version the image."
    },
    "publish_project": {
      "Value": "${PROJECT}",
      "Description": "A project to publish the resulting image to."
    }
  },
  "Steps": {
    "build-rocky": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "./enterprise_linux.wf.json",
        "Vars": {
          "el_release": "rocky-linux-8",
          "kickstart_config": "./kickstart/rocky_linux_8.cfg",
          "google_cloud_repo": "${google_cloud_repo}",
          "installer_iso": "${installer_iso}"
        }
      }
    },
    "create-image": {
      "CreateImages": [
        {
          "Name": "rocky-linux-8-v${build_date}",
          "SourceDisk": "el-install-disk",
          "Licenses": [
            "projects/rocky-linux-cloud/global/licenses/rocky-linux-8"
          ],
          "Description": "Rocky Linux, Rocky Linux, 8, x86_64 built on ${build_date}",
          "Family": "rocky-linux-8",
          "Project": "${publish_project}",
          "NoCleanup": true,
          "ExactName": true,
          "GuestOsFeatures": ["UEFI_COMPATIBLE", "VIRTIO_SCSI_MULTIQUEUE", "SEV_LIVE_MIGRATABLE_V2"]
        }
      ]
    }
  },
  "Dependencies": {
    "create-image": ["build-rocky"]
  }
}
