{
  "Name": "build-rhel-7-byol",
  "Vars": {
    "google_cloud_repo": {
      "Value": "stable",
      "Description": "The Google Cloud Repo branch to use."
    },
    "installer_iso": {
      "Required": true,
      "Description": "The RHEL 7 installer ISO to build from."
    },
    "build_date": {
      "Value": "${DATE}",
      "Description": "Build datestamp used to version the image."
    },
    "install_disk": {
      "Value": "disk-rhel-7",
      "Description": "Name of the disk to install onto."
    },
    "export_gcs_path": {
      "Value": "${OUTSPATH}",
      "Description": "A GCS path to export the image tar file to. Defaults to OUTSPATH."
    },
    "publish_project": {
      "Value": "${PROJECT}",
      "Description": "A project to publish the resulting image to. Defaults to PROJET."
    }
  },
  "Steps": {
    "build-rhel": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "./enterprise_linux.wf.json",
        "Vars": {
          "el_release": "rhel7",
          "google_cloud_repo": "${google_cloud_repo}",
          "install_disk": "${install_disk}",
          "installer_iso": "${installer_iso}",
          "rhel_byol": "true"
        }
      }
    },
    "export-image": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "../../export/disk_export.wf.json",
        "Vars": {
          "destination": "${export_gcs_path}/rhel-7-byol-v${build_date}/root.tar.gz",
          "licenses": "4621277670514851623",
          "source_disk": "${install_disk}"
        }
      }
    },
    "create-image": {
      "CreateImages": [
        {
          "Name": "rhel-7-byol-v${build_date}",
          "SourceDisk": "${install_disk}",
          "Licenses": [
            "projects/rhel-cloud/global/licenses/rhel-7-byol"
          ],
          "Description": "Red Hat, Red Hat Enterprise Linux, 7, x86_64 built on ${build_date}",
          "Family": "rhel-7-byol",
          "Project": "${publish_project}",
          "NoCleanup": true,
          "ExactName": true
        }
      ]
    }
  },
  "Dependencies": {
    "export-image": ["build-rhel"],
    "create-image": ["export-image"]
  }
}
