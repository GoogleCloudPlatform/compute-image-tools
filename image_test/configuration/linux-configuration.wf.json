{
  "Name": "linux-configuration-test",
  "Vars": {
    "source_image": {"Required": true, "Description": "Image to be tested"}
  },
  "Sources": {
    "configuration_bootstrap.py": "../../daisy_workflows/linux_common/bootstrap.py",
    "configuration_files/": "./linux/",
    "configuration_files/test.py": "./linux/configuration-test.py",
    "configuration_files/utils.py": "../../daisy_workflows/linux_common/utils.py"
  },
  "Steps": {
    "create-disk": {
      "CreateDisks": [
        {
          "Name": "disk",
          "SourceImage": "${source_image}",
          "Type": "pd-ssd"
        }
      ]
    },
    "create-configuration-instance": {
      "CreateInstances": [
        {
          "Name": "inst-configuration",
          "RealName": "inst-configuration-${DATETIME}-${ID}",
          "Disks": [{"Source": "disk"}],
          "StartupScript": "configuration_bootstrap.py",
          "Metadata": {
            "instance_name": "inst-configuration-${DATETIME}-${ID}",
            "files_gcs_dir": "${SOURCESPATH}/configuration_files",
            "script": "test.py",
            "prefix": "Test",
            "zone": "${ZONE}",
            "project": "${PROJECT}"
          },
          "Scopes": ["https://www.googleapis.com/auth/cloud-platform"]
        }
      ]
    },
    "rsyslog-kernel-console-test": {
      "Timeout": "5m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-configuration",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "RsyslogKernelConsoleTest"
          }
        }
      ]
    },
    "rsyslog-hostname-test": {
      "Timeout": "5m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-configuration",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "inst-configuration-${DATETIME}-${ID}"
          }
        }
      ]
    },
    "rsyslog-daemon-console-test": {
      "Timeout": "5m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-configuration",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "RsyslogDaemonConsoleTest"
          }
        }
      ]
    },
    "wait-for-test-completion": {
      "Timeout": "5m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-configuration",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "TestSuccess",
            "FailureMatch": "TestFailed"
          }
        }
      ]
    }
  },
  "Dependencies": {
    "create-configuration-instance": ["create-disk"],
    "rsyslog-kernel-console-test": ["create-configuration-instance"],
    "rsyslog-hostname-test": ["create-configuration-instance"],
    "rsyslog-daemon-console-test": ["create-configuration-instance"],
    "wait-for-test-completion": ["create-configuration-instance"]
  }
}
