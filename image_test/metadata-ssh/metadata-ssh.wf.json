{
  "Name": "img-metadata-ssh-test",
  "Vars": {
    "source_image": {"Required": true, "Description": "Image to be tested"}
  },
  "Sources": {
    "metadata_ssh_files/test.py": "./metadata-ssh-tester.py",
    "metadata_ssh_files/utils.py": "../../daisy_workflows/linux_common/utils.py",
    "metadata_ssh_startup.py": "../../daisy_workflows/linux_common/bootstrap.py"
  },
  "Steps": {
    "create-firewall-rule": {
      "CreateFirewallRules": [
        {
          "name": "allow-metadata-ssh",
          "network": "global/networks/default",
          "allowed": [
            {
              "IPProtocol": "tcp",
              "Ports": ["22"]
            }
          ]
        }
      ]
    },
    "create-disk-tester": {
      "CreateDisks": [
        {
          "Name": "disk-tester",
          "SourceImage": "projects/debian-cloud/global/images/family/debian-9",
          "Type": "pd-ssd"
        }
      ]
    },
    "create-metadata-ssh-disk-testee": {
      "CreateDisks": [
        {
          "Name": "metadata-ssh-disk-testee",
          "SourceImage": "${source_image}",
          "Type": "pd-ssd"
        }
      ]
    },
    "create-instance-tester": {
      "CreateInstances": [
        {
          "Name": "inst-metadata-ssh-tester",
          "Disks": [{"Source": "disk-tester"}],
          "StartupScript": "metadata_ssh_startup.py",
          "metadata": {
            "files_gcs_dir": "${SOURCESPATH}/metadata_ssh_files",
            "script": "test.py",
            "prefix": "Test",
            "testee": "inst-metadata-ssh-testee-${DATETIME}-${ID}",
            "debian_install_google_api_python_client": "yes",
            "zone": "${ZONE}",
            "project": "${PROJECT}"
          },
          "Scopes": [
            "https://www.googleapis.com/auth/devstorage.read_only",
            "https://www.googleapis.com/auth/compute"
          ]
        }
      ]
    },
    "create-metadata-ssh-instance-testee": {
      "CreateInstances": [
        {
          "Name": "inst-metadata-ssh-testee",
          "RealName": "inst-metadata-ssh-testee-${DATETIME}-${ID}",
          "Disks": [{"Source": "metadata-ssh-disk-testee"}],
          "metadata": {
            "startup-script": "service sshguard stop; sleep 1; logger -p daemon.info BOOTED"
          }
        }
      ]
    },
    "wait-for-metadata-ssh-testee-boot": {
      "Timeout": "5m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-metadata-ssh-testee",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "BOOTED"
          }
        }
      ]
    },
    "wait-for-tester": {
      "Timeout": "30m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-metadata-ssh-tester",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "TestSuccess",
            "FailureMatch": "TestFailed"
          }
        }
      ]
    }
  },
  "Dependencies": {
    "create-metadata-ssh-instance-testee": ["create-metadata-ssh-disk-testee"],
    "wait-for-metadata-ssh-testee-boot": ["create-metadata-ssh-instance-testee"],
    "create-instance-tester": ["create-disk-tester", "wait-for-metadata-ssh-testee-boot", "create-firewall-rule"],
    "wait-for-tester": ["create-instance-tester"]
  }
}
