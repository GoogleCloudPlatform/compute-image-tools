{
  "Name": "windows-2016-translate-test",
  "Sources": {
    "post_translate_test.ps1": "./scripts/post_translate_test.ps1"
  },
  "Vars": {
    "image_name": {
      "Value": "windows-2016-translate-test-${ID}"
    },
    "source_image": {
      "Value": "projects/compute-image-tools-test/global/images/windows-2016-import"
    },
    "translate_workflow": {
      "Value": "../daisy_workflows/image_import/windows/translate_windows_2016.wf.json"
    }
  },
  "Steps": {
    "create-disk-from-image": {
      "CreateDisks": [
        {
          "name": "translate-me",
          "sourceImage": "${source_image}",
          "type": "pd-ssd"
        }
      ]
    },
    "create-test-disk": {
      "CreateDisks": [
        {
          "name": "disk-import-test",
          "sourceImage": "${image_name}",
          "type": "pd-ssd"
        }
      ]
    },
    "create-test-instance": {
      "CreateInstances": [
        {
          "disks": [
            {
              "source": "disk-import-test"
            }
          ],
          "machineType": "n1-standard-4",
          "name": "inst-import-test",
          "StartupScript": "post_translate_test.ps1"
        }
      ]
    },
    "delete-image": {
      "DeleteResources": {
        "Images": [
          "${image_name}"
        ]
      }
    },
    "translate-2016": {
      "Timeout": "30m",
      "IncludeWorkflow": {
        "Path": "${translate_workflow}",
        "Vars": {
          "image_name": "${image_name}",
          "source_disk": "translate-me"
        }
      }
    },
    "wait-for-test-instance": {
      "Timeout": "30m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-import-test",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "All Tests Passed",
            "FailureMatch": "Test Failed:",
            "StatusMatch": "Test:"
          }
        }
      ]
    }
  },
  "Dependencies": {
    "create-test-disk": [
      "translate-2016"
    ],
    "create-test-instance": [
      "create-test-disk"
    ],
    "delete-image": [
      "create-test-disk"
    ],
    "translate-2016": [
      "create-disk-from-image"
    ],
    "wait-for-test-instance": [
      "create-test-instance"
    ]
  }
}