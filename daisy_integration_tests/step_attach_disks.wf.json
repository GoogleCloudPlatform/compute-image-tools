{
  "Name": "attach-disks-test",
  "Sources": {
    "test_devices.sh": "./scripts/test_devices.sh"
  },
  "Vars": {
    "about-this-test": {
      "Value": "",
      "Description": "This test creates an instance and then attaches two disks to that instance."
    }
  },
  "Steps": {
    "attach-disks": {
      "AttachDisks": [
        {
          "Instance": "instance",
          "source": "disk1"
        },
        {
          "Instance": "instance",
          "source": "disk2"
        }
      ]
    },
    "create-disks": {
      "CreateDisks": [
        {
          "name": "disk1",
          "sizeGb": "10"
        },
        {
          "name": "disk2",
          "sizeGb": "10"
        }
      ]
    },
    "create-instance": {
      "CreateInstances": [
        {
          "disks": [
            {
              "initializeParams": {
                "diskType": "pd-ssd",
                "sourceImage": "projects/debian-cloud/global/images/family/debian-10"
              }
            }
          ],
          "name": "instance",
          "StartupScript": "test_devices.sh"
        }
      ]
    },
    "test-one-instance": {
      "WaitForInstancesSignal": [
        {
          "Name": "instance",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "SUCCESS JO2Pd99h4qRK5HIpc5NP"
          }
        }
      ]
    }
  },
  "Dependencies": {
    "attach-disks": [
      "create-instance",
      "create-disks"
    ],
    "test-one-instance": [
      "create-instance"
    ]
  }
}
