{
  "Name": "create-instances-test",
  "Sources": {
    "report_success.sh": "./scripts/report_success.sh"
  },
  "Vars": {
    "about-this-test": {
      "Value": "",
      "Description": "This test creates an instance and checks that it was created OK, and also creates multiple instances and checks that they are also OK."
    }
  },
  "Steps": {
    "create-one-instance": {
      "CreateInstances": [
        {
          "disks": [
            {
              "initializeParams": {
                "diskType": "pd-ssd",
                "sourceImage": "projects/debian-cloud/global/images/family/debian-10"
              }
            }
          ],
          "name": "single-instance",
          "StartupScript": "report_success.sh"
        }
      ]
    },
    "create-three-instances": {
      "CreateInstances": [
        {
          "disks": [
            {
              "initializeParams": {
                "diskType": "pd-ssd",
                "sourceImage": "projects/debian-cloud/global/images/family/debian-10"
              }
            }
          ],
          "name": "first-instance",
          "StartupScript": "report_success.sh"
        },
        {
          "disks": [
            {
              "initializeParams": {
                "diskType": "pd-ssd",
                "sourceImage": "projects/debian-cloud/global/images/family/debian-10"
              }
            },
            {
              "initializeParams": {
                "diskType": "local-ssd"
              }
            }
          ],
          "name": "second-instance",
          "StartupScript": "report_success.sh"
        },
        {
          "disks": [
            {
              "initializeParams": {
                "diskType": "pd-ssd",
                "sourceImage": "projects/debian-cloud/global/images/family/debian-10"
              }
            },
            {
              "initializeParams": {
                "diskType": "local-ssd"
              },
              "interface": "NVME"
            },
            {
              "initializeParams": {
                "diskType": "local-ssd"
              }
            }
          ],
          "name": "third-instance",
          "StartupScript": "report_success.sh"
        }
      ]
    },
    "test-one-instance": {
      "Timeout": "15m",
      "WaitForInstancesSignal": [
        {
          "Name": "single-instance",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "SUCCESS JO2Pd99h4qRK5HIpc5NP"
          }
        }
      ]
    },
    "test-three-instances": {
      "WaitForInstancesSignal": [
        {
          "Name": "first-instance",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "SUCCESS JO2Pd99h4qRK5HIpc5NP"
          }
        },
        {
          "Name": "second-instance",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "SUCCESS JO2Pd99h4qRK5HIpc5NP"
          }
        },
        {
          "Name": "third-instance",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "SUCCESS JO2Pd99h4qRK5HIpc5NP"
          }
        }
      ]
    }
  },
  "Dependencies": {
    "test-one-instance": [
      "create-one-instance"
    ],
    "test-three-instances": [
      "create-three-instances"
    ]
  }
}
