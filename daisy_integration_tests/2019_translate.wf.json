{
  "Name": "windows-2019",
  "Sources": {
    "post_translate_test.ps1": "./scripts/post_translate_test.ps1"
  },
  "Vars": {
    "image_name": {
      "Value": "windows-2019-translate-test-${ID}"
    },
    "source_image": {
      "Value": "projects/compute-image-tools-test/global/images/windows-2019"
    },
    "translate_workflow": {
      "Value": "../daisy_workflows/image_import/windows/translate_windows_2019_byol.wf.json"
    }
  },
  "Steps": {
    "create-disk-from-image": {
      "CreateDisks": [
        {
          "name": "pre-translate",
          "sourceImage": "${source_image}",
          "type": "pd-ssd"
        }
      ]
    },
    "run": {
      "Timeout": "30m",
      "IncludeWorkflow": {
        "Path": "${translate_workflow}",
        "Vars": {
          "image_name": "${image_name}",
          "source_disk": "pre-translate"
        }
      }
    },
    "create-test-disk-from-image": {
      "CreateDisks": [
        {
          "name": "post-translate",
          "sourceImage": "${image_name}",
          "type": "pd-ssd"
        }
      ]
    },
    "create-test": {
      "CreateInstances": [
        {
          "disks": [
            {
              "source": "post-translate"
            }
          ],
          "machineType": "n1-standard-4",
          "Metadata": {
              "byol": "true"
          },
          "name": "test",
          "StartupScript": "post_translate_test.ps1"
        }
      ]
    },
    "delete-image": {
      "DeleteResources": {
        "Images": [
          "${image_name}"
        ]
      }
    },
    "wait-for-test": {
      "Timeout": "30m",
      "WaitForInstancesSignal": [
        {
          "Name": "test",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "All Tests Passed",
            "FailureMatch": "Test Failed:",
            "StatusMatch": "Test:"
          }
        }
      ]
    }
  },
  "Dependencies": {
    "run": ["create-disk-from-image"],
    "create-test-disk-from-image": ["run"],
    "create-test": ["create-test-disk-from-image"],
    "delete-image": ["create-test-disk-from-image"],
    "wait-for-test": ["create-test"]
  }
}
