{
  "Name": "detach-disks-test",
  "Vars": {
    "about-this-test": {
      "Value": "",
      "Description": "This test creates an instance with disks naturally attached, and then attaches two more disks, then detach all 4 of them."
    }
  },
  "Steps": {
    "detach-disks": {
      "DetachDisks": [
        {
          "Instance": "instance",
          "DeviceName": "disk3"
        },
        {
          "Instance": "instance",
          "DeviceName": "device4"
        }
      ]
    },
    "attach-disks": {
      "AttachDisks": [
        {
          "Instance": "instance",
          "source": "disk3"
        },
        {
          "Instance": "instance",
          "source": "disk4",
          "DeviceName": "device4"
        }
      ]
    },
    "create-disks": {
      "CreateDisks": [
        {
          "name": "disk1",
          "sizeGb": "10"
        },
        {
          "name": "disk2",
          "sizeGb": "10"
        },
        {
          "name": "disk3",
          "sizeGb": "10"
        },
        {
          "name": "disk4",
          "sizeGb": "10"
        }
      ]
    },
    "create-instance": {
      "CreateInstances": [
        {
          "name": "instance",
          "disks": [
            {
              "initializeParams": {
                "diskType": "pd-ssd",
                "sourceImage": "projects/debian-cloud/global/images/family/debian-9"
              }
            },
            {
              "source": "disk1"
            },
            {
              "source": "disk2",
              "deviceName": "device2"
            }
          ]
        }
      ]
    }
  },
  "Dependencies": {
    "create-instance": [
      "create-disks"
    ],
    "attach-disks": [
      "create-instance"
    ],
    "detach-disks": [
      "attach-disks"
    ]
  }
}
